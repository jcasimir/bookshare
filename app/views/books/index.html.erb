
<% if can? :create, Book %>
<div class="new">
<%= link_to 'New Book', new_book_path %>
</div>
<% end %>

<% @locations.each do |location| %>
  <div class='location'>
    <h2><%= location.name %></h2>

    <% location.books.each do |book| %>
      <div class='book'>
        <%= link_to image_tag(book.image_url), book %> 
      </div>
    <% end %>

  </div>
<% end %>

<br />

