<p id="notice"><%= notice %></p>

<p>
  <b><%= @book.title %></b> by 
  <%= @book.author %>
</p>

<p>
  <b>Owner:</b>
  <%= @book.user.email %>
</p>

<p>
  <b>Borrower:</b>
  <% if @book.borrower_user_id == nil %>
    <%= link_to 'Borrow', borrow_book_path(@book) %> 
  <% else %>
    <%= User.find(@book.borrower_user_id).email %>
  <% end %>
</p>

<p>
  <b>Location:</b>
  <%= @book.location.name %>
</p>

<p>
  <b>Isbn:</b>
  <%= @book.isbn %>
</p>

<p>
  <%= image_tag @book.image_url, :title => @book.title, :alt => @book.title %> <br />
</p>

<p>
  <b>Details:</b>
  <%= link_to "Details", @book.details_url %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |

<% if @book.borrower_user_id == current_user.id %>
  <%= link_to 'Return', return_book_path(@book) %> |
<% else %>
  <%= link_to 'Borrow', borrow_book_path(@book) %> |
<% end %>

<%= link_to 'Destroy', @book, :confirm => 'Are you sure?', :method => :delete %>
<%= link_to 'Back', books_path %>
