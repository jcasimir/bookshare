<p id="notice"><%= notice %></p>

<p>
  <b><%= @location.name %></b>
<% if can? :manage, Location %>
  <%= link_to 'Edit', edit_location_path(@location) %>
<% end %>
</p>

<% @location.books.each do |book| %>
  <div class='book'>
    <%= link_to image_tag(book.image_url), book %>
  </div>
<% end %>

<div style="clear: both;" >
  <%= link_to 'Back', locations_path %>
</div>
