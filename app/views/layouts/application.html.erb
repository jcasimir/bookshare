<!DOCTYPE html>
<html>
<head>
  <title>Bookshare</title>
  <%= stylesheet_link_tag 'screen' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="wrapper_one">
  <div id="wrapper_two">
    
    <%= link_to_rpx "Sign in", user_session_url %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div id="header">
      <h1> The Book Share App </h1>
    </div>  
    <div id="column_1">
      Grid 1
    </div>
    <div id="column_2">
      Grid 2
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</div>


<%= javascript_include_rpx(user_session_url) %>

</body>
</html>
